generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int     @id @default(autoincrement())
  name          String?
  email         String   @unique
  publicKey     String?  @unique
  products      Product[]
  purchases     Purchases[]   
}


model Product {
  id           Int       @id @default(autoincrement())
  title        String
  cost         Int
  payTo        String?
  description  String?
  images       Image[]
  video        String?
  userId       Int
  seller       User      @relation(fields: [userId], references: [id])
  purchases    Purchases[]
}

model Image {
  id            Int      @id @default(autoincrement())
  productId     Int
  imageUrl      String
  product       Product  @relation(fields: [productId], references: [id])
}

model Purchases {
  id            Int      @id @default(autoincrement())
  status        TxnStatus
  buyerId       Int
  productId     Int
  timestamp     DateTime
  buyer         User    @relation(fields: [buyerId], references: [id])
  product       Product @relation(fields: [productId], references: [id])
}

enum TxnStatus {
  Processing
  Success
  Failure
}